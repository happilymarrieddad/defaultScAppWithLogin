doctype html
html(lang='en')
	head
		title Login Page
		link(rel='stylesheet',href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/spacelab/bootstrap.min.css')

	body

		div.container
			div.row
				div.col-md-6.col-md-offset-3
					form.form.form-horizontal(action="/session",method="POST",style='margin-top:200px')
						div.panel.panel-primary
							div.panel-heading
								h4 Please Login
							div.panel-body
								div.row
									div.col-md-10.col-md-offset-1
										br
										if (error)
											div.form-group
												h4.text-danger=error

										div.form-group
											label(for="email") Email
											input.form-control(type="text",name="email",value=email)
											
										div.form-group
											label(for="email") Password
											input.form-control(type="password",name="password")
										hr
										div.form-group
											button.btn.btn-md.btn-success(type="submit") Login
											a.btn.btn-md.btn-warning.pull-right(href='/user/create',type='button') Create Account