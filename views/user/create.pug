doctype html
html(lang='en')
	head
		title Account Creation Page
		link(rel='stylesheet',href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/spacelab/bootstrap.min.css')

	body

		div.container
			div.row
				div.col-md-8.col-md-offset-2
					form.form.form-horizontal(action="/user",method="POST",style='margin-top:60px')
						div.panel.panel-primary
							div.panel-heading
								h4 Please Fill Out The Form Completely
							div.panel-body
								div.row
									div.col-md-10.col-md-offset-1
										br
										if (error)
											div.form-group
												h4.text-danger=error

										div.form-group
											label(for="first") First Name
											input.form-control(type="text",name="first",value=first)

										div.form-group
											label(for="last") Last Name
											input.form-control(type="text",name="last",value=last)

										div.form-group
											label(for="email") Email
											input.form-control(type="text",name="email",value=email)
											
										div.form-group
											label(for="password") Password
											input.form-control(type="password",name="password")
											
										div.form-group
											label(for="password_confirm") Password
											input.form-control(type="password",name="password_confirm")

										hr
										div.form-group
											button.btn.btn-md.btn-success(type="submit") Create Account
											a.btn.btn-md.btn-warning.pull-right(href='/session/create',type='button') Login